<?xml version="1.0" ?>
<gfx-xform version="1">
    <input file="png/gfx-sprite-tiles.png" type="png" tile-width="8" tile-height="8" />
    <output file="gfxdata/sprite-tiles.inc">
        <tiles var-name="spriteTiles" />
        <maps pointers-size="8">
            <!-- Higatana Maps -->
            <map var-name="mapHigatanaRedStill" left="0" top="0" width="1" height="1" />
            <map var-name="mapHigatanaRedA" left="1" top="0" width="1" height="1" />
            <map var-name="mapHigatanaRedB" left="2" top="0" width="1" height="1" />
            <map var-name="mapHigatanaRedC" left="3" top="0" width="1" height="1" />
            <map var-name="mapHigatanaYellowStill" left="4" top="0" width="1" height="1" />
            <map var-name="mapHigatanaYellowA" left="5" top="0" width="1" height="1" />
            <map var-name="mapHigatanaYellowB" left="6" top="0" width="1" height="1" />
            <map var-name="mapHigatanaYellowC" left="7" top="0" width="1" height="1" />
            
            <!-- Higatana Bullet Maps -->
            <map var-name="mapHigatanaRedBulletA" left="0" top="1" width="1" height="1" />
            <map var-name="mapHigatanaRedBulletB" left="1" top="1" width="1" height="1" />
            <map var-name="mapHigatanaRedBulletC" left="2" top="1" width="1" height="1" />
            <map var-name="mapHigatanaYellowBulletA" left="3" top="1" width="1" height="1" />
            <map var-name="mapHigatanaYellowBulletB" left="4" top="1" width="1" height="1" />
            <map var-name="mapHigatanaYellowBulletC" left="5" top="1" width="1" height="1" />

            <!-- Invader Maps -->
            <map var-name="mapInvaderANearA" left="0" top="2" width="1" height="1" />
            <map var-name="mapInvaderANearB" left="1" top="2" width="1" height="1" />
        </maps>
    </output>
</gfx-xform>
